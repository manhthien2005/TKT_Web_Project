@{
    Layout = null;
}

@model LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lazada Seller Login</title>
    <link rel="stylesheet" href="~/css/Account/Login.css" />
    @*<link rel="stylesheet" href="~/css/Account/OTPForm.css" />*@
</head>
<body>
    
    <div id="root">
        <div class="login-container" id="J_page">
            <div class="header">
                <div class="header-content">
                    <!-- Logo Section -->
                    <div class="header-logo">
                        <img src="//img.alicdn.com/imgextra/i1/O1CN01S6OQyg23Dj7ZuZrgK_!!6000000007222-55-tps-446-113.svg" alt="Lazada Seller" class="logo" width="220" height="56">
                    </div>

                    <!-- Navigation & Actions Section -->
                    <div class="header-actions" style="padding: 20px">
                        <!-- Country Switcher -->
                        <div class="country-switcher">
                            <button class="button country-button">
                                <div class="country-wrapper">
                                    <img src="//lzd-img-global.slatic.net/us/media/75ae9e4570ee22bdf6270bd87c8d193a-512-512.svg" width="23" height="23" alt="Country Flag" class="country-flag">
                                    <span class="country-label">Việt Nam</span>
                                </div>
                                <i class="icon-arrow"></i>
                            </button>
                        </div>

                        <!-- Language Switcher -->
                        <div class="language-switcher">
                            <button class="button language-button">
                                <span>Tiếng Việt</span>
                                <i class="icon-arrow" style="margin: 0px 20px"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Login Section -->
        <div class="background"
             style="background-image: url('https://img.lazcdn.com/g/tps/imgextra/i4/O1CN016UzALb1mBa3cNMrwz_!!6000000004916-0-tps-2400-1215.jpg_2200x2200q75.jpg_.webp');">
        </div>

        <div class="login-box" style="margin: 100px 900px 0px">
            <div class="form-container">
                <div class="form-header">
                    <p>Quên mật khẩu</p>
                </div>
                <div> <p>Email của bạn: <span id="display-email">@ViewBag.Email</span></p></div>
                <form asp-action="VerifyOTP" role="grid" class="login-form" method="post">
                    @Html.AntiForgeryToken()

                    <!-- Các input OTP -->
                    <div id="inputs" class="inputs" style="margin: 30px 40px 28px; transform: scale(1.2);">
                        <input class="input" type="text" inputmode="numeric" maxlength="1" name="otp[]" />
                        <input class="input" type="text" inputmode="numeric" maxlength="1" name="otp[]" />
                        <input class="input" type="text" inputmode="numeric" maxlength="1" name="otp[]" />
                        <input class="input" type="text" inputmode="numeric" maxlength="1" name="otp[]" />
                    </div>

                    <!-- Email hidden input -->
                    <input type="hidden" id="user-email"/>
                        
                    <!-- Gửi lại mã -->
                    <div>
                        <span class="register-link resend-link" id="resend-otp">gửi lại mã</span><br>
                    </div>
                    <div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <!-- Thông báo kết quả -->
                    <div id="resend-message" style="color: red; margin-top: 10px;"></div>

                    <!-- Nút xác nhận -->
                    <div>
                        <button type="submit" class="submit-button">
                            <span>Xác Nhận</span>
                        </button>
                    </div>
                </form>
               
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @*<script src="@Url.Content("~/js/Account/OTPscript.js")"></script>*@
    <script src="@Url.Content("~/js/ResendOTP.js")"></script>
</body>
</html>
