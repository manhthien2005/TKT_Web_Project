                                <span>Tài Khoản</span>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="UserDropDownRevamp">
                                        <a rel="nofollow" href="@Url.Action("Index", "Account")">
                                            <p title="Thông tin tài khoản" class="UserDropDownItemRevamp">Thông tin tài khoản</p>
                                        </a>
                                        <a rel="nofollow" href="/sales/order/history?src=header_my_account">
                                            <p title="Đơn hàng của tôi" class="UserDropDownItemRevamp">Đơn hàng của tôi</p>
                                        </a>
                                        <a href="javascript:void(0)" onclick="logoutUser()">
                                            <p title="Đăng xuất" class="UserDropDownItemRevamp">Đăng xuất</p>
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="UserDropDownRevamp">
                                        <a rel="nofollow" href="@Url.Action("Login", "Account")">
                                            <p title="Đăng Nhập" class="UserDropDownItemRevamp">Đăng Nhập</p>
                                        </a>
                                        <a rel="nofollow" href="@Url.Action("Register", "Account")">
                                            <p title="Đăng Ký" class="UserDropDownItemRevamp">Đăng Ký</p>
                                        </a>
                                    </div>
                                }


                            </div>


                            <div class="Cart">
                                <a data-view-id="header_user_shortcut_cart" href="@((User.Identity.IsAuthenticated) ?  Url.Action("Index", "Cart") :  Url.Action("Login", "Account"))" rel="nofollow">
                                    <div class="CartItems">
                                        <div class="cart-wrapper">
                                            <img class="cart-icon" src="https://salt.tikicdn.com/ts/upload/51/e2/92/8ca7e2cc5ede8c09e34d1beb50267f4f.png" alt="header_header_img_Cart" width="24" height="24">
                                            <span class="CartQty">0</span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="BottomHeader">
                        <div data-view-id="header_quicklinks_container" class="QuickLinks">
                            <a data-view-id="header_quicklinks_item" data-view-index="0" href="/dien-gia-dung/c1882?from=header_keyword">điện gia dụng</a>
