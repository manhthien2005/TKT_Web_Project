                                </div>
                            </div> 
                        </div>
                        <div data-view-id="header_user_shortcut" class="UserStyle">
                            <a class="Home" href="@Url.Action("HomePage", "Home")" rel="nofollow" style="display: flex; align-items: center; text-decoration: none;">
                                <img src="https://salt.tikicdn.com/ts/upload/32/56/db/d919a4fea46f498b5f4708986d82009d.png" alt="header_menu_item_home" width="24" height="24" style="margin-right: 4px">
                                Trang Chủ
                            </a>
                            <div data-view-id="header_header_account_container" class="Account">
